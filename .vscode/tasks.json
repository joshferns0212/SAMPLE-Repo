{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "C++",
			"type": "shell",
			"command": "${fileBasenameNoExtension}",
			"dependsOn": [
				"Compile C++"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"presentation": {
				"echo": false,
				"showReuseMessage": false,
				"focus": true
			},
			"options": {"shell": {"executable": "cmd.exe"}}
		},
		{
			"label": "Compile C++",
			"type": "shell",
			"command": "g++ -o ${fileBasenameNoExtension} ${fileBasename}",
			"args": [],
			"presentation": {
				"reveal": "never",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}
