{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Python",
            "type": "shell",
            "command": "python ${fileBasename}",
            "group": "build",
            "problemMatcher": [],
            "presentation":
            {
                "focus": true,
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "C++",
            "type": "shell",
            "command": "${fileBasenameNoExtension}",
            "dependsOn": 
            [
                "Compile C++"
            ],
            "problemMatcher": 
            [
                "$gcc"
            ],
            "group": "build",
            "presentation":
            {
                "echo": false,
                "showReuseMessage": false,
                "focus": true
            }
        },
        {
            "label": "Compile C++",
            "type": "shell",
            "command": "g++ -o ${fileBasenameNoExtension} ${fileBasename}",
            "presentation":
            {
                "reveal": "never",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}